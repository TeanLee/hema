<view class="newAddr__hd">
    <text class="newAddr__add left" bindtap="backToChooseAddr">返回</text>
    <text class="newAddr__title">选择收货地址</text>
    <text bindtap="saveInfo" class="newAddr__add right">保存</text>
</view>
<view class="newAddr__bd">
    <van-cell-group>
        <van-field
            value="{{ address }}"
            required
            clearable
            label="收货地址"
            placeholder="请输入收货地址"
        />
        <van-divider />
        <van-field
            value="{{ name }}"
            required
            clearable
            label="联系人"
            placeholder="请输入联系人"
        />
        <van-divider />
        <van-field
            value="{{ phone }}"
            required
            clearable
            label="手机号"
            placeholder="请输入手机号"
        />
        <van-divider />
    </van-cell-group>
    <van-button round type="info" size="large" color="#0eb6ff">保存</van-button>
</view>