.shopping {
  width: 100%;
  height: 100%;
}
.shopping__hd, .shopping__hd__content {
  width: 100%;
  height: 100rpx;
  background-color: #ffffff;
  text-align: center;
  color: black;
  font-size: 34rpx;
  border-bottom: 1px solid #d2d2d2;
  line-height: 100rpx;
}
.goodsList__hd__right, .goodsList__hd__right image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  margin-top: 16rpx;
  float: right;
}
.shopping__title {
  text-align: center;
}
.shopping__title__delete {
  display: inline;
  color: #989898;
  font-size: 30rpx;
  margin-right: 36rpx;
}
.shopping__bd .weui-cell__hd icon {
  margin-right: 20rpx;
}
.weui-cell__bd, .weui-cell__bd image {
  width: 130rpx;
  height: 130rpx;
}
.weui-cell__ft {
  width: 482rpx;
  height: 170rpx;
  display: block;
  /* outline: 1px solid red; */
  box-sizing: border-box;
  overflow: hidden;
}
.weui-cell__ft text {
  display: block;
}
.weui-cell__ft .proIntr {
  font-size: 26rpx;
  color: #363636;
  height: 40rpx;
  padding-top: 20rpx;
}
.weui-cell__ft .price {
  font-size: 30rpx;
  color: #ff6f14;
  clear: both;
}
.weui-cell__ft .count {
  width: 210rpx;
  height: 50rpx;
  border: 1px solid #e5e5e6;
  float: right;
  border-radius: 10rpx;
}
.weui-cell__ft .count text {
  display: block;
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  padding: 0;
}
.weui-cell__ft .count .number {  
  display: block;
  width: 104rpx;
  border-left: 1px solid #e5e5e5;
  border-right: 1px solid #e5e5e5;
}
.shopping__ft {
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 110rpx;
  outline: 1px solid #d9d9d9;
  line-height: 104rpx;
  overflow: hidden;
  background-color: white;
  position: fixed;
}
.shopping__ft__hd {
  margin-left: 20rpx;
}
.shopping__ft__hd icon {
  margin-top: 30rpx;
}
.shopping__ft__bd text {
  position: absolute;
  right: 240rpx;
  bottom: 0;
  font-size: 26rpx;
  display: block;
}
.shopping__ft__bd text:nth-child(1) {
  color: #818181;
  right: 350rpx;
}
.shopping__ft__bd text:nth-child(2) {
  bottom: 0;
  color: #ff6d11;
}
.shopping__ft__ft {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 230rpx;
  height: 110rpx;
  background-color: #23a3ff;
  color: #ffffff;
  text-align: center;
  font-size: 34rpx;
}
.shopping__bd {
  margin-bottom: 120rpx;
}