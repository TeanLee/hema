.choose-addr__hd {
    width: 100%;
    height: 88rpx;
    text-align: center;
    background-color: #ffffff;
}
.choose-addr__title {
    font-size: 34rpx;
    line-height: 88rpx;
    margin-left: 160rpx;
}
.choose-addr__add {
    font-size: 30rpx;
    color: #23a3ff;
    display: block;
    line-height: 88rpx;
    margin-right: 34rpx;
}
.choose-addr__bd__input {
    width: 94%;
    margin-left: 3%;
    /* outline: 1px solid green; */
    padding: 4rpx;
    font-size: 24rpx;
    border: 1px solid #dfdfdf;
    border-radius: 10rpx;
}
.choose-addr__bd__session {
    width: 100%;
    border: 1px solid #dfdfdf;
}
.choose-addr__bd__addr>text {
    font-size: 26rpx;
    color: #7a7a7a;
    display: block;
    padding: 30rpx 34rpx;
}
.choose-addr__bd__session {
    padding-left: 34rpx;
}
.choose-addr__bd__session text:nth-child(2n+1) {
    font-size: 30rpx;
    color: #000000;
    display: block;
    width: 100%;
}
.choose-addr__bd__session text:nth-child(2) {
    font-size: 26rpx;
    color: #696969;
}